.PHONY = all scrape clean help
EXE = pvss
# CPPFLAGS = -Wall -Wextra -pthread -g -O2
CPPFLAGS = -Wall -Wextra -pthread -O3
LDLIBS = -lntl -lgmp -lm

.PHONY: all wave clean help

all: scrape

scrape: ffte.o pvss.o main.o
			$(CXX) $(CPPFLAGS) -o $@ $^ $(LDLIBS)

ffte.o: ffte.cpp ffte.h

pvss.o: pvss.cpp pvss.h

main.o: main.cpp

clean:
			@rm -f *~ *.o scrape

help:
			@echo "Usage:"
			@echo "  make [all]    Build the software"
			@echo "  make clean    Remove all files generated by make"
			@echo "  make help     Display the main targets of this Makefile with a short description"
