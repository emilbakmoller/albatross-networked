.PHONY = all clean help

TARGET = albatross
SRCDIR = src
INCDIR = include

SRC = $(wildcard $(SRCDIR)/*.cpp)
OBJ = $(SRC:.cpp=.o)

LDLIBS = -lntl -lgmp -lm -lcryptopp
CXXFLAGS = -Wall -Wextra -pthread -O3
# CXXFLAGS = -Wall -Wextra -pthread -g
INCLUDES = -I$(INCDIR)

all: $(TARGET)

$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $^ $(LDLIBS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $^ $(INCLUDES)

main.o: $(wildcare $(INCDIR)/*.hpp)
ldei.o: ldei.hpp hash.hpp
ffte.o: ffte.hpp
pvss.o: pvss.hpp
hash.o: hash.hpp

clean:
	@$(RM) $(OBJ) *~ $(TARGET)

help:
			@echo "Usage:"
			@echo "  make [all]    Build the software"
			@echo "  make clean    Remove all files generated by make"
			@echo "  make help     Display the main targets of this Makefile with a short description"
